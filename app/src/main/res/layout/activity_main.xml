<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="6"
    android:columnCount="4"
    tools:context=".MainActivity">
    <!--网格布局：行数6，列数4 -->


    <EditText
        android:id="@+id/et_input"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="2"
        />
    <!--所占列数4，垂直方向自动填充，覆盖后面列的所有单元格 -->

    <Button
        android:id="@+id/bt_清除"
        android:text="清除"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_后退"
        android:text="后退"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_百分号"
        android:text="%"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_除"
        android:text="/"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_7"
        android:text="7"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_8"
        android:text="8"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_9"
        android:text="9"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_乘"
        android:text="*"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_4"
        android:text="4"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_5"
        android:text="5"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_6"
        android:text="6"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_减"
        android:text="-"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_1"
        android:text="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_2"
        android:text="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_3"
        android:text="3"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_加"
        android:text="+"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_0"
        android:text="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="2"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />


    <Button
        android:id="@+id/bt_点"
        android:text="."
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_等"
        android:text="="
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="20dp"
        />







</GridLayout>




